<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="KiyonamiWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KiyonamiWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="KiyonamiWinUI">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <ComboBox
                    x:Name="ComboBoxWaveIn"
                    Margin="5"
                    Width="140"
                    Height="35"
                    SelectedIndex="0">
                </ComboBox>
                <ComboBox
                    x:Name="ComboBoxLangInput"
                    Margin="5"
                    Width="140"
                    Height="35"
                    SelectedIndex="0">
                </ComboBox>
                <Button x:Name="StartStopButton" Click="StartStopButton_Click" Width="140" Height="35" Margin="5" HorizontalAlignment="Left" />
            </StackPanel>
            <TextBox x:Name="TextInput" Width="740" Height="300" Margin="5" HorizontalAlignment="Left" TextWrapping="Wrap" />
            <StackPanel Orientation="Horizontal">
                <ComboBox
                    x:Name="ComboBoxLangOutput"
                    SelectionChanged="ComboBoxLangOutputChanged"
                    Margin="5"
                    Width="140"
                    Height="35"
                    SelectedIndex="0">
                </ComboBox>
                <Button x:Name="ButtonTrans" Click="ButtonTransClick" Width="140" Height="35" Margin="5" HorizontalAlignment="Left" IsEnabled="False">
                    <TextBlock x:Name="ButtonTransText">Translate</TextBlock>
                </Button>
            </StackPanel>
            <TextBox x:Name="TextOutput" Width="740" Height="300" Margin="5" HorizontalAlignment="Left" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Window>
